<MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" Class="d-flex flex-grow-1" PanelClass="d-flex flex-grow-1">
    <MudTabPanel Text="Response" Class="flex">
        <Code @bind-Data="@Response.ResponseBody" Name="GrpcResponseEditor" />
    </MudTabPanel>
</MudTabs>

@code {
    [Parameter]
    public bool DarkMode { get; set; }

    [Parameter]
    public SpacetimeResponse Response { get; set; } = new SpacetimeResponse();

    [Parameter]
    public EventCallback<SpacetimeResponse> ResponseChanged { get; set; }
}
