@using Spacetime.Shared.Components.Inputs
<li @onclick="OnClickCallback"
    class="flex justify-between items-center pl-2 pr-2 pt-1 pb-1 first:border-t border-b border-zinc-700 hover:bg-zinc-700 cursor-pointer @Css">
    
    @if (Prefix != null)
    {
        @Prefix
    }
    <span>@Title</span>

    @if (ActionTemplate != null)
    {
        @*<Button OnClickCallback="@OnActionCallback">@ActionTemplate</Button>*@
        @ActionTemplate
    }
</li>


@code {
    [Parameter]
    public RenderFragment? Title { get; set; }
    [Parameter]
    public RenderFragment? Prefix { get; set; }
    [Parameter]
    public RenderFragment? ActionTemplate { get; set; }
    [Parameter]
    public string? Css { get; set; }
    [Parameter]
    public EventCallback<MouseEventArgs> OnActionCallback { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> OnClickCallback { get; set; }
}
